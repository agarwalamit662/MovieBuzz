<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
        >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id = "@+id/myreviewscardview"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:background="@color/cardview_dark_background">


            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Movie Name"

                            android:textColor="@color/com_facebook_blue"
                            android:id = "@+id/mnamemyreviews"
                            android:textSize="15dp"
                            android:textStyle="italic"
                            android:layout_marginTop="0dp"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id = "@+id/mnamereview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:text="@string/cheese_ipsum"
                            />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RatingBar
                            android:id="@+id/ratingBarMyReviews"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:clickable="false"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="@color/com_facebook_blue"
                            android:stepSize="0.1" />

                        <TextView
                            android:id = "@+id/mreviewtimemine"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:textSize="10dp"
                            android:text="Review Time"

                            android:textStyle="italic"
                            android:allowUndo="false"
                            android:gravity="right" />
                    </LinearLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"

                    android:background="@android:color/darker_gray"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp">


                    <TextView
                        android:id = "@+id/likesmy"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:textSize="15dp"
                        android:text="Likes"
                        android:layout_marginRight="5dp"
                        android:textStyle="italic"
                        android:textColor="#666666"
                        android:allowUndo="false"
                        android:gravity="left"
                        android:layout_weight="1"/>
                    <com.facebook.share.widget.ShareButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/com_facebook_blue"

                        android:text="Share"
                        android:textColor="#ffffff"
                        android:layout_marginLeft="0dp"
                        android:layout_gravity="right"
                        android:id = "@+id/sharereview"
                        android:layout_weight="0"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:visibility="gone"
                    android:id="@+id/likerslayout">


                    <TextView
                        android:id = "@+id/likesNames"

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"

                        android:textSize="15dp"
                        android:text="Likers Name"
                        android:layout_marginRight="5dp"
                        android:textStyle="italic"
                        android:textColor="@color/com_facebook_blue"
                        android:allowUndo="false"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:visibility="gone"/>

                </LinearLayout>

                </LinearLayout>



        </android.support.v7.widget.CardView>

</LinearLayout>

