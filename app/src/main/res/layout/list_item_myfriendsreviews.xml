<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingTop="5dp"
    >

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id = "@+id/myfriendsreviewscardview"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"

            android:background="@color/cardview_dark_background">


            <LinearLayout
                style="@style/Widget.CardContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatar_reviewer"
                        android:layout_width="20dp"
                        android:layout_height="20dp"

                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Reviewer Name"

                        android:textColor="@color/com_facebook_blue"
                        android:id = "@+id/reviewername"
                        android:textSize="12dp"
                        android:layout_marginLeft="8dp"
                        android:layout_marginTop="2dp"
                        android:focusableInTouchMode="false" />
                </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:background="@android:color/darker_gray"/>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Movie Name"

                            android:textColor="@color/com_facebook_blue"
                            android:id = "@+id/mnamemyreviewsfriends"
                            android:textSize="17dp"
                            android:textStyle="normal"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="5dp"
                            android:focusableInTouchMode="false" />

                        <TextView
                            android:id = "@+id/mnamereviewfriends"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="#000000"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:text="@string/cheese_ipsum"
                            />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                        <RatingBar
                            android:id="@+id/ratingBarMyReviewsfriends"
                            style="?android:attr/ratingBarStyleSmall"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="10dp"
                            android:layout_marginLeft="5dp"
                            android:clickable="false"
                            android:isIndicator="true"
                            android:numStars="5"
                            android:progressTint="@color/com_facebook_blue"
                            android:stepSize="0.1" />

                         <TextView
                            android:id = "@+id/mreviewtime"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                             android:textSize="10dp"
                            android:text="Review Time"
                            android:layout_marginRight="5dp"
                            android:textStyle="italic"
                             android:allowUndo="false"
                             android:gravity="right" />
                </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"

                        android:background="@android:color/darker_gray"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <com.support.android.designlibdemo.CheckableImageView
                            android:layout_marginTop="10dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/likeimageview"
                            android:src="@drawable/ic_like"
                            />

                        <TextView
                            android:id = "@+id/likes"
                            android:layout_marginTop="10dp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingTop="10dp"
                            android:textSize="15dp"
                            android:textColor="#666666"
                            android:text="Likes"
                            android:layout_marginRight="5dp"
                            android:textStyle="italic"
                            android:allowUndo="false"
                            android:gravity="left" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp"
                        android:visibility="gone"
                        android:id="@+id/likerslayoutFriends">


                        <TextView
                            android:id = "@+id/likesNamesFriends"

                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"

                            android:textSize="15dp"
                            android:text="Likers Name"
                            android:layout_marginRight="5dp"
                            android:textStyle="italic"
                            android:textColor="@color/com_facebook_blue"
                            android:allowUndo="false"
                            android:gravity="left"
                            android:layout_weight="1"
                            android:visibility="gone"/>

                    </LinearLayout>

                </LinearLayout>
            </LinearLayout>
                <!--
                    <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:orientation="horizontal"
                   android:layout_weight="0" >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/avatar_movies_reviewedfriends"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginTop="45dp"
                        android:layout_marginRight="5dp"
                        />

                </LinearLayout>
                -->




        </android.support.v7.widget.CardView>

</LinearLayout>

